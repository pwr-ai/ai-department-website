 author = {Eder, Maciej and Piasecki, Maciej and Walkowiak, Tomasz},
 journal = {Cognitive Studies| Études cognitives},
 number = {17},
 pub_year = {2017},
 title = {An open stylometric system based on multilevel text analysis},
 venue = {Cognitive Studies| Études cognitives}
}

