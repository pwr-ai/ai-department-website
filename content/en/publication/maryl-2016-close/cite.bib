 author = {Maryl, Maciej and Piasecki, Maciej and Mlynarczyk, Ksenia},
 booktitle = {DH},
 pages = {273--276},
 pub_year = {2016},
 title = {Where Close and Distant Readings Meet: Text Clustering Methods in Literary Analysis of Weblog Genres.},
