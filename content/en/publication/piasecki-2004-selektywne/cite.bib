@article{piasecki2004selektywne,
 abstract = {Semantyka formalna jest rzadko stosowanym terminem. Często nawet podręczniki poświęcone tej dziedzinie badań lingwistycznych unikają używania takiej nazwy, np. Larson i Segal (1995) posługują się ogólnym pojęciem semantyki języka naturalnego. Przyczyną z pewnością jest zróżnicowanie na liczne nurty badawcze. Jednak formalność ujęcia zagadnień semantyki języka naturalnego nie jest jedynie kwestią rodzaju stosowanych metod. Formalność to kwestia bardziej zasadniczego wyboru–wyboru paradygmatu},
 author = {Piasecki, Maciej},
 journal = {Selective Introduction to Formal Sematics},
 pub_year = {2004},
 title = {Selektywne wprowadzenie do semantyki formalnej},
 venue = {Selective Introduction to Formal Sematics}
}

